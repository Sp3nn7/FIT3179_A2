{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Terrorist Attacks from 2014-2017",
    "view": {"fill": "lightblue"},
    "width": 800,
    "height": 400,
    "projection": {"type": "equirectangular"},

    "layer": [
        {
    
        "data": {
            "url":"ne_110m.json",
            "format": {"type": "topojson", "feature":"ne_110m_admin_0_countries"}
        },

        "transform": [

            {
            "lookup": "properties.NAME",
            "from": {
            "data": {
            "url": "gtdb.csv"
            },
            "key": "country_txt",
            "fields": ["average_attacks"]
            }
            },

            {
                "lookup": "properties.NAME",
                "from": {
                "data": {
                "url": "gtdb.csv"
                },
                "key": "country_txt",
                "fields": ["count"]
                }
            },

            {
            "calculate": "'No Attacks Occured from 2014-2017 for ' + datum.properties.NAME + ' in the dataset'",
            "as": "greytooltip"
            }
            ],
        
        "mark": {"type": "geoshape", "fill": "gray", "stroke":"white"},
        "encoding": {"tooltip": {"field": "greytooltip"}}

        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
        },


        {
            "data": {
                "url":"ne_110m.json",
                "format": {"type": "topojson", "feature":"ne_110m_admin_0_countries"}
                },
                "transform": [

                {
                "lookup": "properties.NAME",
                "from": {
                "data": {
                "url": "gtdb.csv"
                },
                "key": "country_txt",
                "fields": ["average_attacks"]
                }
                },

                {
                    "lookup": "properties.NAME",
                    "from": {
                    "data": {
                    "url": "gtdb.csv"
                    },
                    "key": "country_txt",
                    "fields": ["count"]
                    }
                }


                ],
            "mark": {"type": "geoshape"},
            "encoding": {
            "color": {
            "field": "average_attacks",
            "type": "quantitative",
            "title": "% Contribution to 3 Years of Terrorism",
            "scale": {"scheme": "reds"}
            },
            "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title":
            "Country"},
            {"field": "count", "type": "quantitative","title": "Number of Attacks"},
            {"field": "average_attacks", "type": "quantitative", "format": ".2f", "title": "Global Contibution"}
            ]
            }

        },

    
        {
            "data": {
              "values": [
                {"no_attacks": "No Attacks in Dataset", "type": "nominal"}
              ]
            },
            "mark": {"type": "geoshape", "stroke": "gray"},
            "encoding": {
              "color": {
                "field": "no_attacks",
                "legend": {
                  "symbolType": "square",
                  "title": null
                },
                "scale": {
                  "range": ["grey"]
                }
              }
            }
        },

        {
            "data": {
              "values": [
                {"Water": "Water", "type": "nominal"}
              ]
            },
            "mark": {"type": "geoshape", "stroke": "lightblue"},
            "encoding": {
              "color": {
                "field": "Water",
                "legend": {
                  "symbolType": "square",
                  "title": null
                },
                "scale": {
                  "range": ["lightblue"]
                }
              }
            }
        }


    ]
}